package org.liaohailong.mysql.dao;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.sql.SQLSyntaxErrorException;

public class JDBC {

	public static Connection conn(String ip, String port, String dbName) {
		// 定义地址
		String url = "jdbc:sqlserver://%s:%s/%s;";
		url = String.format(url, ip, port, dbName);
		// 定义连接初始值
		Connection connection = null;
		try {
			// 加载驱动
			Class.forName("com.mysql.jdbc.Driver");
			// 建立连接
			connection = DriverManager.getConnection(url, "sa", "DCX5201314");
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();

		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return connection;
	}
}
