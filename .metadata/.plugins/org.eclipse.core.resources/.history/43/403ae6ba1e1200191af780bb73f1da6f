public class UDPService {

	public static void main(String[] args) {
		int port = 8080;
		try {
			DatagramSocket datagramSocket = new DatagramSocket(port);
			System.out.println("UDP ·þÎñÆ÷¶ËÆô¶¯....");
			byte[] buffer = new byte[1024 * 1024 * 64];
